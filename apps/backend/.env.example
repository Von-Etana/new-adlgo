# Backend Environment Variables

# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/adlgo_db

# Flutterwave Payment Gateway
FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public_key_here
FLUTTERWAVE_SECRET_KEY=your_flutterwave_secret_key_here

# Firebase
GOOGLE_APPLICATION_CREDENTIALS=path/to/firebase-service-account.json

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:8081,http://localhost:19006,http://localhost:3000

# Optional: Winston Logging
LOG_LEVEL=debug
