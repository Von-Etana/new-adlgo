{
    "extends": "@tsconfig/react-native/tsconfig.json",
    "compilerOptions": {
        "jsx": "react-native",
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/*"
            ]
        },
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*",
        "index.js",
        "App.tsx"
    ],
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}